    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fire_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/game_field"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/display_fire"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:padding="8dp"
            android:text="firearms:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/fire_minus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:onClick="onItemButton2"
            android:text="-" />
        <TextView
            android:id="@+id/fire_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/fire_minus"
            />

        <Button
            android:id="@+id/fire_plus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/fire_minus"
            android:onClick="onItemButton2"
            android:text="+" />
        <TextView
            android:id="@+id/fire_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
