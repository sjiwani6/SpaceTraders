            android:text="price"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/robo_plus"
            android:layout_marginLeft="50dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/total_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/robo_field"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:padding="8dp"
            android:text="total:"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/display_capacity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_toLeftOf="@id/display_total2"
            android:layout_marginRight="75dp"
            android:text="0/15"
            />
        <TextView
            android:id="@+id/display_total2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:text="254Cr"
            />

