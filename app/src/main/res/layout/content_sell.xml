    <RelativeLayout
        android:id="@+id/med_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fire_field"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/display_medicine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:padding="8dp"
            android:text="medicine:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/med_minus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:onClick="onItemButton2"
            android:text="-" />
        <TextView
            android:id="@+id/med_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/med_minus"
            />

        <Button
            android:id="@+id/med_plus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/med_minus"
            android:onClick="onItemButton2"
            android:text="+" />
