            android:id="@+id/med_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/med_plus"
            android:layout_marginLeft="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mach_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/med_field"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:id="@+id/display_mach"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:padding="8dp"
            android:text="machines:"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mach_minus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp"
            android:onClick="onItemButton2"
            android:text="-" />
        <TextView
            android:id="@+id/mach_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mach_minus"
            />

        <Button
            android:id="@+id/mach_plus"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
